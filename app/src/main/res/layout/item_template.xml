<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:background="@color/color_black"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_layout_template"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/item_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/img_preview_templates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />

        <View
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/color_black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_back"
                android:visibility="invisible" />

            <com.matchday.android.ui.widget.LatoHeavyTextView
                android:id="@+id/txt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/back"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />

        </LinearLayout>

    </FrameLayout>

    <com.matchday.android.ui.widget.LatoBoldTextView
        android:id="@+id/txt_meni_item"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        tools:text="Templates1" />
</LinearLayout>